<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTrackImage"
        style="@style/s_iv_logo"
        android:contentDescription="@string/c_medias"
        tools:src="@drawable/ic_track_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/twNameSong"
            style="@style/s_text_view_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Название песни" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twNameGroup"
                style="@style/s_text_view_song_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Название группы"/>

            <ImageView
                style="@style/s_iv_separate"
                android:contentDescription="@string/separate"
                android:src="@drawable/ic_circle_a"
                />

            <TextView
                android:id="@+id/twDuration"
                style="@style/s_text_view_song_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/s_iv"
        android:contentDescription="@string/c_medias"
        android:src="@drawable/arrow_right"/>

</LinearLayout>