<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textFontWeight="@integer/fw_500"
                android:textSize="@dimen/fs_text_22"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="24dp">

            <Button
                android:id="@+id/find"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="@string/c_search"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="@integer/fw_500"
                android:textSize="@dimen/fs_text_22"
                app:cornerRadius="@dimen/icp_16"
                app:icon="@drawable/search"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/icp_10"
                app:iconSize="@dimen/icp_24"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/media"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="@string/c_medias"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="@integer/fw_500"
                android:textSize="@dimen/fs_text_22"
                app:cornerRadius="@dimen/fs_text_16"
                app:icon="@drawable/media"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/icp_10"
                app:iconSize="@dimen/icp_24"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/tools"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="@string/c_tools"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="@integer/fw_500"
                android:textSize="@dimen/fs_text_22"
                app:cornerRadius="@dimen/icp_16"
                app:icon="@drawable/tools"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/icp_10"
                app:iconSize="@dimen/icp_24"
                app:iconTint="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>